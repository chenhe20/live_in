<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--database driver-->
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <plugin type="liv.ac.uk.live_in.generator.MybatisGenerator"></plugin>
        <!-- Example rename to Query-->
        <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
            <property name="searchString" value="DAOExample$"/>
            <property name="replaceString" value="Query"/>
        </plugin>
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- automatically remove generated comments true：yes ： false:no -->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>
        <!--database link, username, password -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/live_in_db?zeroDateTimeBehavior=convertToNull&amp;characterEncoding=UTF-8"
                        userId="root" password="12345678">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- generated model name and location -->
        <javaModelGenerator targetPackage="liv.ac.uk.live_in.dao"
                            targetProject="/Users//myProjects/IdeaProjects/live_in_platform/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="mapper" targetProject="/Users/hechen/myProjects/IdeaProjects/live_in_platform/src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="liv.ac.uk.live_in.mapper"
                             targetProject="/Users/hechen/myProjects/IdeaProjects/live_in_platform/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <table tableName="admin" domainObjectName="Admin">
            <columnOverride column="delete_status" javaType="Boolean"/>
        </table>
        <table tableName="user" domainObjectName="User">
            <columnOverride column="delete_status" javaType="Boolean"/>
        </table>
        <table tableName="accommodation" domainObjectName="Accommodation">
            <columnOverride column="delete_status" javaType="Boolean"/>
        </table>
        <table tableName="room" domainObjectName="Room">
            <columnOverride column="delete_status" javaType="Boolean"/>
        </table>
        <table tableName="preference" domainObjectName="Preference">
            <columnOverride column="delete_status" javaType="Boolean"/>
        </table>

    </context>
</generatorConfiguration>
